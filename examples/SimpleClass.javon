public class Person {
    String name;
    int age;

    public Person(String n, int a) {
        this.name = n;
        this.age = a;
    }

    public void greet() {
        System.out.println("Hello, my name is " + name + " and I am " + age + " years old");
    }
}

public class Main {
    public static void main(String[] args) {
        Person p = new Person("Alice", 30);
        p.greet();
    }
}
